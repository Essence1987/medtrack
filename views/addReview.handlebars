<div class="columns add-review-full">
    <form class="addReview container column is-half is-offset-one-quarter control" action="/add-review" method="POST">
        <div class="control is-expanded dr-dropdown" id="dr-select">
            <p class="physician-select">Select the Physician You Would Like to Review:</p>
            <div class="select is-fullwidth inner-dr-dropdown">
                <select id="facultySelect" name="FacultyName"> <!-- Add the name attribute to the select element -->
                    <option value="">Select Physician</option>
                    {{#each facultyMembers}} <!-- Loop through the facultyMembers -->
                        <option>{{this.dataValues.FacultyName}}</option> <!-- Access the FacultyName property within dataValues -->
                    {{/each}}
                    <option value="__add_new__">Add New Physician</option>
                </select>
            </div>
        </div>
        <div id="newFacultyInput" style="display: none;">
            <label class="subtitle">Enter the New Physician's Name:</label>
            <input type="text" name="NewFacultyName" placeholder="New Physician's Name">
        </div>
        <div class="field">
            <p class="question-title label">On a scale of 1-10, where 0 is poor and 10 is excellent, please rate the following:</p>
            <label class="subtitle">The Physician's Medical Knowledge:</label>
            <select id="example" name="MedicalKnowledgeRating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
        <div class="field">
            <label class="subtitle">The Physician's Clinical Judgment:</label>
            <select id="example" name="ClinicalJudgmentRating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
        <div class="field">
            <label class="subtitle">The Physician's Teaching Skills:</label>
            <select id="example" name="TeachingSkillsRating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
        <div class="field">
            <label class="subtitle">The Physician's Humanistic Qualities:</label>
            <select id="example" name="HumanisticQualitiesRating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
        <div>
            <div class="field">
            <label class="subtitle">Your Overall Experience:</label>
            <select id="example" name="OverallExperienceRating">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
            </select>
        </div>
        <div>
            <label class="subtitle">Please Leave Any Additional Comments About Your Experience Here:</label>
            <textarea class="field textarea" placeholder="Enter Comments Here" name="OverallExperienceComments"></textarea>
        </div>
        <div class="field is-grouped is-grouped-centered submitBtn">
            <p class="control"><button class="button is-info" type="submit">Submit</button></p>
            <p class="control"><a class="button is-light">Cancel</a></p>
        </div>
    </form>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const facultySelect = document.getElementById("facultySelect");
        const newFacultyInput = document.getElementById("newFacultyInput");

        facultySelect.addEventListener("change", function() {
            const selectedValue = facultySelect.value;
            if (selectedValue === "__add_new__") {
                newFacultyInput.style.display = "block";
            } else {
                newFacultyInput.style.display = "none";
            }
        });
    });
</script>
