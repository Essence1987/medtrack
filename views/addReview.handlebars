<div class="columns add-review-full">
    <form class="addReview container column is-half is-offset-one-quarter control" action="/add-review" method="POST">
        <div class="control is-expanded dr-dropdown" id="dr-select">
            <p class="physician-select"><strong>Select the Physician You Would Like to Review:</strong></p>
            <div class="select is-fullwidth inner-dr-dropdown">
                <select name="FacultyName"> <!-- Add the name attribute to the select element -->
                    <option>Select Physician</option>
                    {{#each facultyMembers}} <!-- Loop through the facultyMembers -->
                        <option>{{this.dataValues.FacultyName}}</option> <!-- Access the FacultyName property within dataValues -->
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="field">
            <p class="question-title label">On a scale of 1-10, where 0 is poor and 10 is excellent, please rate the following:</p>
            <label class="subtitle">The Physician's Medical Knowledge:</label>
            <div class="control">
                <input class="input" type="number" placeholder="Enter Number" name="MedicalKnowledgeRating" min="1" max="10">
            </div>
        </div>
        <div class="field">
            <label class="subtitle">The Physician's Clinical Judgment</label>
            <div class="control">
                <input class="input" type="number" placeholder="Enter Number" name="ClinicalJudgmentRating" min="1" max="10">
            </div>
        </div>
        <div class="field">
            <label class="subtitle">The Physician's Teaching Skills</label>
            <div class="control">
                <input class="input" type="number" placeholder="Enter Number" name="TeachingSkillsRating" min="1" max="10">
            </div>
        </div>
            <div class="field">
            <label class="subtitle">The Physician's Humanistic Qualities</label>
            <div class="control">
                <input class="input" type="number" placeholder="Enter Number" name="HumanisticQualitiesRating" min="1" max="10">
            </div>
        </div>
        <div>
            <div class="field">
            <label class="label">Your Overall Experience</label>
            <div class="control">
                <input class="input" type="number" placeholder="Enter Number" name="OverallExperienceRating" min="1" max="10">
            </div>
        </div>
        <textarea class="field textarea" placeholder="e.g. Hello world"></textarea>
        <div class="field is-grouped is-grouped-centered">
            <p class="control"><a class="button is-info">Submit</a></p>
            <p class="control"><a class="button is-light">Cancel</a></p>
        </div>
    </form>
</div>